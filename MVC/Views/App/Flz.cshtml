
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>消落带采集系统</title>
    <!--jquery-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <!--CesiumJS-->
    <link href="~/Scripts/Cesium/Widgets/widgets.css" rel="stylesheet" />
    <script src="~/Scripts/Cesium/Cesium.js"></script>
    <script src="~/Scripts/navigation/viewerCesiumNavigationMixin.min.js"></script>
    <script src="~/Scripts/navigation/SpirographPositionProperty.js"></script>
    <!--Layui-->
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/layui/layui.all.js"></script>
    <!--ECharts-->
    <script src="~/Scripts/ECharts/echarts.min.js"></script>

    <link href="~/Apps/flz/css/main.css" rel="stylesheet" />
    <style>
        body {
            overflow-y: scroll; /* 禁止刷新后出现横向滚动条 */
        }
    </style>
</head>
<body>
    <!--顶栏-->
    <div id="header">
        <!--系统logo-->
        <img id="syslogo" src="~/Resources/img/head/flzlogo.png" />

        <!--当前项目-->
        <div class="layui-inline" style="position:absolute;left:420px;top:5px;bottom:5px">
            <div class="layui-input-inline" id="currentprojectoperate">
                <select id="currentproject"></select>
            </div>
        </div>

        <!--工具栏-->
        <div style="position:absolute;top:7px;right:5px">
            <button id="userbtn" type="button" class="layui-btn1 layui-btn-primary1 layui-btn-sm1" style="height:35px;color:Lavender"><i class="layui-icon layui-icon-user"><span style="margin-left:5px">@ViewBag.User</span></i></button>
            <button id="noticebtn" type="button" class="layui-btn1 layui-btn-primary1 layui-btn-sm1" style="height:35px;color:Lavender"><i class="layui-icon layui-icon-notice"></i></button>
            <button id="setbtn" type="button" class="layui-btn1 layui-btn-primary1 layui-btn-sm1" style="height:35px;color:Lavender"><i class="layui-icon layui-icon-set-fill"></i></button>
            <a href="~/Platform/Logout">
                <button id="exitbtn" type="button" class="layui-btn1 layui-btn-primary1 layui-btn-sm1" style="height:35px;color:Lavender"><i class="layui-icon layui-icon-logout"></i></button>
            </a>
        </div>

    </div>

    <!--地图-->
    <div id="map"></div>
    <!--功能开关-->
    <img id="openmenu" src="../../Resources/img/icon/left.png" title="显示功能面板" onclick="openMenu()" />
    <!--功能-->
    <div id="menu">
        <div id="accordion">
            <h3 onclick="Clear()">目标测量</h3>
            <div>
                <div class="divborder">
                    <img src="../../Resources/img/survey/position.png" onclick="pointMeasure()" title="坐标" class="surveyStyle button white" />&nbsp;&nbsp;
                    <img src="../../Resources/img/survey/distance.png" class="surveyStyle button white" title="长度" onclick="lengthMeasure()" />&nbsp;&nbsp;
                    <img src="../../Resources/img/survey/height.png" onclick="heightMeasure()" class="surveyStyle button white" title="高度"/>&nbsp;&nbsp;
                    <img src="../../Resources/img/survey/area.png" onclick="areaMeasure()" class="surveyStyle button white" title="面积" />&nbsp;&nbsp;
                    <img src="../../Resources/img/survey/azimuth.png" onclick="azimuthMeasure()" class="surveyStyle button white" title="方位角" />&nbsp;&nbsp;
                    <img src="../../Resources/img/survey/remove.png" onclick="Clear()" class="surveyStyle button white" title="清除" />&nbsp;&nbsp;
                </div>
            </div>
            <h3 onclick="Clear()">点标注</h3>
            <div style="max-height: 500px">
                <div id="pointpic" class="divborder" onclick="getPointStyle(event)">
                    &nbsp;<img id="p1" src="../../Resources/img/mark/p1.png" class="pointLabelStyle" />
                    <img id="p2" src="../../Resources/img/mark/p2.png" class="pointLabelStyle" />
                    <img id="p9" src="../../Resources/img/mark/p9.png" class="pointLabelStyle" />
                    <img id="p11" src="../../Resources/img/mark/p11.png" class="pointLabelStyle" />
                    <img id="p14" src="../../Resources/img/mark/p14.png" class="pointLabelStyle" />
                    <img id="p15" src="../../Resources/img/mark/p15.png" class="pointLabelStyle" />
                </div>

                <br />

                <div>
                    &nbsp;&nbsp;
                    <button class="button white medium" onclick="addPointLabel()">添加</button>
                    &nbsp;&nbsp;&nbsp;
                    <button class="button white medium" onclick="deleteAllPointLabel()">清空</button>
                </div>

                <br />

                <div id="pointLabel" onclick="deletePointLabel(event)" onkeydown="modiftyPointLabel(event)"></div>
            </div>

            <h3 onclick="Clear()">线标注</h3>
            <div style="max-height: 500px">
                <div class="divborder">
                    <div onclick="getLineStyle(event)">
                        &nbsp;<img id="l0" src="../../Resources/img/mark/l1.png" style="border: 2px solid #008000; vertical-align: middle" width="32" height="32" />
                        &nbsp;&nbsp;&nbsp;
                        <img id="l1" src="../../Resources/img/mark/l1.png" class="polylineLabelStyle" />
                        <img id="l2" src="../../Resources/img/mark/l2.png" class="polylineLabelStyle" />
                        <img id="l3" src="../../Resources/img/mark/l3.png" class="polylineLabelStyle" />
                        <img id="l4" src="../../Resources/img/mark/l4.png" class="polylineLabelStyle" />
                    </div>
                    <br />
                    &nbsp;&nbsp;<input type="text" value="颜色" readonly="readonly" style="background-color: rgba(255,255,255,0); border: 0px; width: 40px; vertical-align: middle; text-decoration: none; font: 15px/100% 'Microsoft yahei'; text-shadow: 0 1px 1px rgba(0,0,0,.3);" /><input id="linecolor" type="color" style="background-color: rgba(255,255,255,0); border: 0px; width: 40px; vertical-align: middle;" value="#00FFFF" />
                    <input type="text" value="宽度" readonly="readonly" style="background-color: rgba(255,255,255,0); border: 0px; width: 40px; vertical-align: middle; text-decoration: none; font: 15px/100% 'Microsoft yahei'; text-shadow: 0 1px 1px rgba(0,0,0,.3);" /><input id="linewidth" type="number" min="1" max="10" step="1" value="1" style="width: 40px; background-color: #fff; vertical-align: middle; height: 12px;" />
                </div>

                <br />

                <div>
                    &nbsp;&nbsp;
                    <button class="button white medium" onclick="addLineLabel()">添加</button>
                    &nbsp;&nbsp;&nbsp;
                    <button class="button white medium" onclick="deleteAllLineLabel()">清空</button>
                </div>

                <br />

                <div id="lineLabel" onclick="deleteLineLabel(event)" onkeydown="modiftyLineLabel(event)"></div>
            </div>

            <h3 onclick="Clear()">面标注</h3>
            <div style="max-height: 500px">
                <div class="divborder">
                    &nbsp;&nbsp;<input type="text" value="颜色" readonly="readonly" style="background-color: rgba(255,255,255,0); border: 0px; width: 40px; vertical-align: middle; text-decoration: none; font: 15px/100% 'Microsoft yahei'; text-shadow: 0 1px 1px rgba(0,0,0,.3);" /><input id="areacolor" type="color" style="background-color: rgba(255,255,255,0); border: 0px; width: 40px; vertical-align: middle" value="#00FFFF" />
                    <input type="text" value="透明" readonly="readonly" style="background-color: rgba(255,255,255,0); border: 0px; width: 45px; vertical-align: middle; text-decoration: none; font: 15px/100% 'Microsoft yahei'; text-shadow: 0 1px 1px rgba(0,0,0,.3);" /><input id="areatransparency" type="number" min="0" max="1" step="0.1" value="0.5" style="width: 50px; background-color: #fff; vertical-align: middle; height: 12px;" />
                </div>

                <br />

                <div>
                    &nbsp;&nbsp;
                    <button class="button white medium" onclick="addAreaLabel()">添加</button>
                    &nbsp;&nbsp;&nbsp;
                    <button class="button white medium" onclick="deleteAllAreaLabel()">清空</button>
                </div>

                <br />

                <div id="areaLabel" onclick="deleteAreaLabel(event)" onkeydown="modiftyAreaLabel(event)"></div>
            </div>

            <!--<h3 onclick="Clear()">图片标注</h3>
            <div style="max-height: 500px">
            </div>-->

            <h3>地质要素</h3>
            <div>
                <div class="divborder">
                    <button onclick="getOccurrence()" class="button white medium" title="在模型上点击三个点">产状</button>
                    <br />
                    <br />
                    <button onclick="getTraceLength()" class="button white medium">迹线</button>
                    <br />
                    <br />
                    <button onclick="Clear()" class="button white medium">清除</button>
                </div>
            </div>
        </div>
    </div>

    <!--javascript-->
    <script>
        var servicesurl = @Html.Raw(Json.Encode(ViewBag.ServicesURL));
    </script>

    <script src="~/Apps/flz/js/1.1-all.js"></script>
    <script src="~/Apps/flz/js/1.2-para.js"></script>
    <script src="~/Apps/flz/js/3.0-map.js"></script>
    <script src="~/Apps/flz/js/4.1-projectlist.js"></script>
    <script src="~/Apps/flz/js/4.2-projectinfo.js"></script>
    <script src="~/Apps/flz/js/5.0-header.js"></script>
    <script src="~/Apps/flz/js/5.1-message.js"></script>
    <script src="~/Apps/flz/js/5.2-setting.js"></script>
    <script src="~/Apps/flz/js/6.0-util.js"></script>
    <script src="~/Apps/flz/js/6.1-layerlist.js"></script>
    <script src="~/Apps/flz/js/6.2-autodevice.js"></script>
    <script src="~/Apps/flz/js/6.3-autodata.js"></script>
    <script src="~/Apps/flz/js/6.4-analysis.js"></script>
    <script src="~/Apps/flz/js/6.5-warning.js"></script>
    <script src="~/Apps/flz/js/6.6-measure.js"></script>
    
    <script src="~/Apps/flz/js/6.8-localtool.js"></script>
    <script src="~/Apps/flz/js/6.9-report.js"></script>
    <!--新增陈小飞 修改-->
    <script src="~/Apps/flz/js/6.7-draw.js"></script>
</body>
</html>
